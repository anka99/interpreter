{-# LANGUAGE CPP #-}
{-# LANGUAGE FlexibleInstances #-}
{-# LANGUAGE LambdaCase #-}
#if __GLASGOW_HASKELL__ <= 708
{-# LANGUAGE OverlappingInstances #-}
#endif

{-# OPTIONS_GHC -fno-warn-incomplete-patterns #-}

-- | Pretty-printer for PrintEmm.
--   Generated by the BNF converter.

module PrintEmm where

import Prelude
  ( ($), (.)
  , Bool(..), (==), (<)
  , Int, Integer, Double, (+), (-), (*)
  , String, (++)
  , ShowS, showChar, showString
  , all, dropWhile, elem, foldr, id, map, null, replicate, shows, span
  )
import Data.Char ( Char, isSpace )
import qualified AbsEmm

-- | The top-level printing method.

printTree :: Print a => a -> String
printTree = render . prt 0

type Doc = [ShowS] -> [ShowS]

doc :: ShowS -> Doc
doc = (:)

render :: Doc -> String
render d = rend 0 (map ($ "") $ d []) "" where
  rend i = \case
    "["      :ts -> showChar '[' . rend i ts
    "("      :ts -> showChar '(' . rend i ts
    "{"      :ts -> showChar '{' . new (i+1) . rend (i+1) ts
    "}" : ";":ts -> new (i-1) . space "}" . showChar ';' . new (i-1) . rend (i-1) ts
    "}"      :ts -> new (i-1) . showChar '}' . new (i-1) . rend (i-1) ts
    [";"]        -> showChar ';'
    ";"      :ts -> showChar ';' . new i . rend i ts
    t  : ts@(p:_) | closingOrPunctuation p -> showString t . rend i ts
    t        :ts -> space t . rend i ts
    _            -> id
  new i     = showChar '\n' . replicateS (2*i) (showChar ' ') . dropWhile isSpace
  space t s =
    case (all isSpace t', null spc, null rest) of
      (True , _   , True ) -> []              -- remove trailing space
      (False, _   , True ) -> t'              -- remove trailing space
      (False, True, False) -> t' ++ ' ' : s   -- add space if none
      _                    -> t' ++ s
    where
      t'          = showString t []
      (spc, rest) = span isSpace s

  closingOrPunctuation :: String -> Bool
  closingOrPunctuation [c] = c `elem` closerOrPunct
  closingOrPunctuation _   = False

  closerOrPunct :: String
  closerOrPunct = ")],;"

parenth :: Doc -> Doc
parenth ss = doc (showChar '(') . ss . doc (showChar ')')

concatS :: [ShowS] -> ShowS
concatS = foldr (.) id

concatD :: [Doc] -> Doc
concatD = foldr (.) id

replicateS :: Int -> ShowS -> ShowS
replicateS n f = concatS (replicate n f)

-- | The printer class does the job.

class Print a where
  prt :: Int -> a -> Doc
  prtList :: Int -> [a] -> Doc
  prtList i = concatD . map (prt i)

instance {-# OVERLAPPABLE #-} Print a => Print [a] where
  prt = prtList

instance Print Char where
  prt     _ s = doc (showChar '\'' . mkEsc '\'' s . showChar '\'')
  prtList _ s = doc (showChar '"' . concatS (map (mkEsc '"') s) . showChar '"')

mkEsc :: Char -> Char -> ShowS
mkEsc q = \case
  s | s == q -> showChar '\\' . showChar s
  '\\' -> showString "\\\\"
  '\n' -> showString "\\n"
  '\t' -> showString "\\t"
  s -> showChar s

prPrec :: Int -> Int -> Doc -> Doc
prPrec i j = if j < i then parenth else id

instance Print Integer where
  prt _ x = doc (shows x)

instance Print Double where
  prt _ x = doc (shows x)

instance Print AbsEmm.Ident where
  prt _ (AbsEmm.Ident i) = doc $ showString i

instance Print (AbsEmm.Program' a) where
  prt i = \case
    AbsEmm.Program _ topdefs -> prPrec i 0 (concatD [prt 0 topdefs])

instance Print (AbsEmm.TopDef' a) where
  prt i = \case
    AbsEmm.TopDef _ decl -> prPrec i 0 (concatD [prt 0 decl])
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, prt 0 xs]

instance Print [AbsEmm.TopDef' a] where
  prt = prtList

instance Print (AbsEmm.Decl' a) where
  prt i = \case
    AbsEmm.Decl _ type_ items -> prPrec i 0 (concatD [prt 0 type_, prt 0 items, doc (showString ";")])
    AbsEmm.FnDecl _ type_ id_ args block -> prPrec i 0 (concatD [prt 0 type_, prt 0 id_, doc (showString "("), prt 0 args, doc (showString ")"), prt 0 block])

instance Print (AbsEmm.Arg' a) where
  prt i = \case
    AbsEmm.Arg _ type_ id_ -> prPrec i 0 (concatD [prt 0 type_, prt 0 id_])
    AbsEmm.ArgRef _ type_ id_ -> prPrec i 0 (concatD [prt 0 type_, doc (showString "&"), prt 0 id_])
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [AbsEmm.Arg' a] where
  prt = prtList

instance Print (AbsEmm.Item' a) where
  prt i = \case
    AbsEmm.NoInit _ id_ -> prPrec i 0 (concatD [prt 0 id_])
    AbsEmm.Init _ id_ expr -> prPrec i 0 (concatD [prt 0 id_, doc (showString "="), prt 0 expr])
    AbsEmm.Array _ id_ expr -> prPrec i 0 (concatD [prt 0 id_, doc (showString "["), prt 0 expr, doc (showString "]")])
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [AbsEmm.Item' a] where
  prt = prtList

instance Print (AbsEmm.Block' a) where
  prt i = \case
    AbsEmm.Block _ stmts -> prPrec i 0 (concatD [doc (showString "{"), prt 0 stmts, doc (showString "}")])

instance Print [AbsEmm.Stmt' a] where
  prt = prtList

instance Print (AbsEmm.Stmt' a) where
  prt i = \case
    AbsEmm.Empty _ -> prPrec i 0 (concatD [doc (showString ";")])
    AbsEmm.BStmt _ block -> prPrec i 0 (concatD [prt 0 block])
    AbsEmm.SDecl _ decl -> prPrec i 0 (concatD [prt 0 decl])
    AbsEmm.Ass _ id_ expr -> prPrec i 0 (concatD [prt 0 id_, doc (showString "="), prt 0 expr, doc (showString ";")])
    AbsEmm.AssArr _ id_ expr1 expr2 -> prPrec i 0 (concatD [prt 0 id_, doc (showString "["), prt 0 expr1, doc (showString "]"), doc (showString "="), prt 0 expr2, doc (showString ";")])
    AbsEmm.Incr _ id_ -> prPrec i 0 (concatD [prt 0 id_, doc (showString "++"), doc (showString ";")])
    AbsEmm.IncrArr _ id_ expr -> prPrec i 0 (concatD [prt 0 id_, doc (showString "["), prt 0 expr, doc (showString "]"), doc (showString "++"), doc (showString ";")])
    AbsEmm.Decr _ id_ -> prPrec i 0 (concatD [prt 0 id_, doc (showString "--"), doc (showString ";")])
    AbsEmm.DecrArr _ id_ expr -> prPrec i 0 (concatD [prt 0 id_, doc (showString "["), prt 0 expr, doc (showString "]"), doc (showString "--"), doc (showString ";")])
    AbsEmm.Ret _ expr -> prPrec i 0 (concatD [doc (showString "return"), prt 0 expr, doc (showString ";")])
    AbsEmm.VRet _ -> prPrec i 0 (concatD [doc (showString "return"), doc (showString ";")])
    AbsEmm.Cond _ expr stmt -> prPrec i 0 (concatD [doc (showString "if"), doc (showString "("), prt 0 expr, doc (showString ")"), prt 0 stmt])
    AbsEmm.CondElse _ expr stmt1 stmt2 -> prPrec i 0 (concatD [doc (showString "if"), doc (showString "("), prt 0 expr, doc (showString ")"), prt 0 stmt1, doc (showString "else"), prt 0 stmt2])
    AbsEmm.While _ expr stmt -> prPrec i 0 (concatD [doc (showString "while"), doc (showString "("), prt 0 expr, doc (showString ")"), prt 0 stmt])
    AbsEmm.Brk _ -> prPrec i 0 (concatD [doc (showString "break"), doc (showString ";")])
    AbsEmm.Cnt _ -> prPrec i 0 (concatD [doc (showString "continue"), doc (showString ";")])
    AbsEmm.SExp _ expr -> prPrec i 0 (concatD [prt 0 expr, doc (showString ";")])
  prtList _ [] = concatD []
  prtList _ (x:xs) = concatD [prt 0 x, prt 0 xs]

instance Print (AbsEmm.Type' a) where
  prt i = \case
    AbsEmm.Int _ -> prPrec i 0 (concatD [doc (showString "int")])
    AbsEmm.Str _ -> prPrec i 0 (concatD [doc (showString "string")])
    AbsEmm.Bool _ -> prPrec i 0 (concatD [doc (showString "bool")])
    AbsEmm.Void _ -> prPrec i 0 (concatD [doc (showString "void")])
    AbsEmm.Fun _ type_ types -> prPrec i 0 (concatD [prt 0 type_, doc (showString "("), prt 0 types, doc (showString ")")])
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [AbsEmm.Type' a] where
  prt = prtList

instance Print (AbsEmm.Expr' a) where
  prt i = \case
    AbsEmm.EArr _ id_ expr -> prPrec i 6 (concatD [prt 0 id_, doc (showString "["), prt 0 expr, doc (showString "]")])
    AbsEmm.EVar _ id_ -> prPrec i 6 (concatD [prt 0 id_])
    AbsEmm.ELitInt _ n -> prPrec i 6 (concatD [prt 0 n])
    AbsEmm.ELitTrue _ -> prPrec i 6 (concatD [doc (showString "true")])
    AbsEmm.ELitFalse _ -> prPrec i 6 (concatD [doc (showString "false")])
    AbsEmm.EApp _ id_ exprs -> prPrec i 6 (concatD [prt 0 id_, doc (showString "("), prt 0 exprs, doc (showString ")")])
    AbsEmm.EString _ str -> prPrec i 6 (concatD [prt 0 str])
    AbsEmm.Neg _ expr -> prPrec i 5 (concatD [doc (showString "-"), prt 6 expr])
    AbsEmm.Not _ expr -> prPrec i 5 (concatD [doc (showString "!"), prt 6 expr])
    AbsEmm.EMul _ expr1 mulop expr2 -> prPrec i 4 (concatD [prt 4 expr1, prt 0 mulop, prt 5 expr2])
    AbsEmm.EAdd _ expr1 addop expr2 -> prPrec i 3 (concatD [prt 3 expr1, prt 0 addop, prt 4 expr2])
    AbsEmm.ERel _ expr1 relop expr2 -> prPrec i 2 (concatD [prt 2 expr1, prt 0 relop, prt 3 expr2])
    AbsEmm.EAnd _ expr1 expr2 -> prPrec i 1 (concatD [prt 2 expr1, doc (showString "&&"), prt 1 expr2])
    AbsEmm.EOr _ expr1 expr2 -> prPrec i 0 (concatD [prt 1 expr1, doc (showString "||"), prt 0 expr2])
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [AbsEmm.Expr' a] where
  prt = prtList

instance Print (AbsEmm.AddOp' a) where
  prt i = \case
    AbsEmm.Plus _ -> prPrec i 0 (concatD [doc (showString "+")])
    AbsEmm.Minus _ -> prPrec i 0 (concatD [doc (showString "-")])

instance Print (AbsEmm.MulOp' a) where
  prt i = \case
    AbsEmm.Times _ -> prPrec i 0 (concatD [doc (showString "*")])
    AbsEmm.Div _ -> prPrec i 0 (concatD [doc (showString "/")])
    AbsEmm.Mod _ -> prPrec i 0 (concatD [doc (showString "%")])

instance Print (AbsEmm.RelOp' a) where
  prt i = \case
    AbsEmm.LTH _ -> prPrec i 0 (concatD [doc (showString "<")])
    AbsEmm.LE _ -> prPrec i 0 (concatD [doc (showString "<=")])
    AbsEmm.GTH _ -> prPrec i 0 (concatD [doc (showString ">")])
    AbsEmm.GE _ -> prPrec i 0 (concatD [doc (showString ">=")])
    AbsEmm.EQU _ -> prPrec i 0 (concatD [doc (showString "==")])
    AbsEmm.NE _ -> prPrec i 0 (concatD [doc (showString "!=")])

